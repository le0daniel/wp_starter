<figure>
    <img
        {# Set URL and size #}
        {% if size and img.sizes[ size ] %}
            src="{{ img.sizes[ size ] }}"
            height="{{ img.sizes[ size ~ '-height' ] }}"
            width="{{ img.sizes[ size ~ '-width' ] }}"
        {% else %}
            src="{{ img.url }}"
            width="{{ img.width }}"
            height="{{ img.height }}"
        {% endif %}

        alt="{{ img.alt }}"
    />

    {% if caption %}
    <figcaption>{{ img.caption }}</figcaption>
    {% endif %}
</figure>